{
	"id":"core_user_fields",
	"fields":[
		{
			"name":"username",
			"id":"username",
			"type":"Text",
			"label":"Username",
			"input_type":"text",
			"required":true,
			"maxlength":250,
			"minlength":0,
			"filter":"RAW",
			"placeholder":"Username",
            "icon_status": true,
            "icon_parent_class": "has-icons-left",
            "icon_markup": "<span class='icon is-small is-left'><i class='fas fa-user'></i></span>"
		},
        {
			"name":"email",
			"id":"email",
			"type":"Text",
			"label":"Email",
			"input_type":"email",
			"required":true,
			"maxlength":250,
			"minlength":0,
			"filter":"RAW",
			"placeholder":"email@whatever.com",
            "icon_status": true,
            "icon_parent_class": "has-icons-left",
            "icon_markup": "<span class='icon is-small is-left'><i class='fas fa-envelope'></i></span>"
		},
		{
			"name": "userstate",
			"id": "userstate",
			"type": "Select",
			"label": "User State",
			"filter": "NUMBER",
			"default":1,
			"select_options":[
				{"value":1,"text":"Enabled"},
				{"value":2,"text":"Enabled - Pwd Reset Req"},
				{"value":0,"text":"Disabled"}
			],
			"slimselect":true
		},
        {
			"name":"password",
			"id":"password",
			"type":"Text",
			"label":"Password",
			"input_type":"password",
			"required":true,
			"description":"Leave blank if no password change required",
			"maxlength":250,
			"minlength":0,
			"filter":"RAW",
			"placeholder":"Password",
            "icon_status": true,
            "icon_parent_class": "has-icons-left",
            "icon_markup": "<span class='icon is-small is-left'><i class='fas fa-lock'></i></span>"
		}
	]
}
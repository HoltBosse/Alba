{
    "name": "holtbosse/alba",
    "description": "Basic developer oriented CMS system",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "HoltBosse\\Alba\\": "src/"
        }
    },
    "bin": ["bin/alba"],
    "require": {
        "phpmailer/phpmailer": "^6.10",
        "erusev/parsedown": "^1.7",
        "holtbosse/db": "^1.0",
        "holtbosse/form": "^1.3",
        "symfony/dotenv": "^7.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "pestphp/pest": "^3.8 || ^4.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
